{
  "manifest_version": 3,
  "name": "Personal Dashboard",
  "version": "1.0",
  "description": "A clean, beautiful dashboard for your new tab with weather, news, and search.",
  "action": {
    "default_icon": "images/icon.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["geolocation", "storage"],
  "host_permissions": [
    "https://api.openweathermap.org/*",
    "https://newsapi.org/*",
    "https://apis.scrimba.com/*",
    "https://www.google.com/*"
  ]
}
